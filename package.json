{
  "name": "traffic-engine-app",
  "version": "0.0.3",
  "description": "Traffic Engine App",
  "repository": "https://github.com/opentraffic/traffic-engine-app",
  "main": "src/main/js/app.js",
  "dependencies": {
    "classnames": "^2.1.3",
    "flux": "^2.0.1",
    "keymirror": "~0.1.0",
    "object-assign": "^1.0.0",
    "react": "^0.13.0",
    "leaflet": "^0.7.0",
    "dc": "2.0.0-beta.14"
  },
  "devDependencies": {
    "browserify": "^6.2.0",
    "envify": "^3.0.0",
    "jest-cli": "^0.4.3",
    "reactify": "^0.15.2",
    "catw": "~0.0.1",
    "uglify-js": "~2.4.15",
    "watchify": "^2.1.1"
  },
  "scripts": {
    "watch-js": "watchify -o src/main/resources/public/javascripts/bundle.js -v -d src/main/js/app.js",
    "watch-css": "catw node_modules/*/*.css node_modules/*/*/*.css -o src/main/resources/public/stylesheets/bundle.css",
    "build-js": "browserify . -t [envify --NODE_ENV production] | uglifyjs -cm > js/bundle.min.js",
    "build-css": "cat *.css */*.css >",
    "build": "npm run build-js && npm run build-css",
    "start": "npm run watch-js & npm run watch-css",
    "test": "jest"
  },
  "author": "Bill Fisher",
  "browserify": {
    "transform": [
      "reactify",
      "envify"
    ]
  },
  "jest": {
    "rootDir": "./src/main/js/"
  }
}
